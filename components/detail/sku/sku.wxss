
.mask{
    background: #fff;
    width: 92%;
    position: fixed;
    bottom:108rpx;
    bottom: calc(108rpx + constant(safe-area-inset-bottom));
    bottom: calc(108rpx + env(safe-area-inset-bottom));
    padding:4%;
    font-size:24rpx;
    box-sizing:content-box;
    z-index:2;
}
.mask_box .setcount{
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom:20rpx;
}
.setcount .add_pruduct_num{
    height: 60rpx;
    width: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border:1rpx solid  #999;
    border-left:0;
}
.setcount .reduce_pruduct_num{
    height: 60rpx;
    width:  60rpx;
    line-height: 60rpx;
    text-align: center;
    border:1rpx solid  #999; 
    border-right:0;
}
.setcount .count_pruduct_num{
    flex: 1;
    text-align: center;
    color: #999;
    line-height: 60rpx;
    height:60rpx;
    border:1rpx solid  #999;
    box-sizing:border-box;
}
.setcount .empty{
  flex:1;
  display:block;
  height:100%;
  width:30%;
}
.mask_box .label{
  height:60rpx;
  line-height:60rpx;
  text-align:left;
  display:block;
}

.mask_box  .setcount .btn{
  border:1rpx solid #999;
  display:block;
  height:60rpx;
  width:80rpx;
  text-align:center;
  line-height:59rpx;
  float:left;
  overflow:hidden;
  border-radius:8rpx;
}
.mask .close
{
  position:absolute;
  top:5rpx;
  right:5rpx;
}
.mask .close image
{
  height:40rpx;
  width:40rpx;
}
.mask_box .setcount2
{
  display:block;
}
.mask_box .setcount2 .btn{
  margin-right:20rpx;
}
.mask_box .setcount2 .btn.active
{
  color:#e70002;
}
.mask .head{
  display:flex;
}
.mask .head .left{
  width:35%;
}
.mask .head .left image
{
  width:90%;
  height:150rpx;
}
.mask .head .right p{
  display:block;
  line-height:75rpx;
  font-size:24rpx;
}
.mask .head .right p em{
  color:#e70002;
  font-weight:bold;
}

.mask_box .clear
{
  clear:both;
}











