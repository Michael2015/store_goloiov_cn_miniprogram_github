.redpack {
  background: #da251c;
}

.top_bg {
  padding: 46rpx 46rpx 0;
  background: #da251c;
  box-sizing: border-box;
  height: 526rpx;
  position: relative;
}

.top_bg image {
  width: 100%;
  height: 100%;
}

.money {
  position: absolute;
  top: 158rpx;
  left: 50%;
  width: 300rpx;
  height: 100rpx;
  transform: translate(-50%, 0);
  font-weight: bolder;
  font-size: 70rpx;
  text-align: center;
  line-height: 100rpx;
  overflow: hidden;
}

.money text {
  font-size: 62rpx;
  display: inline-block;
  vertical-align: top;
}

.top_bg .tixian {
  width: 327rpx;
  height: 96rpx;
  position: absolute;
  top: 344rpx;
  left: 50%;
  transform: translate(-50%, 0);
}

.friend {
  background: white;
  margin: 0 30rpx;
  text-align: center;
  border-radius: 10rpx;
  min-height: 500rpx;
  padding: 56rpx 0;
  position: relative;
}
.friend .share{
  position: absolute;
  top: 9%;
  left: 50%;
  width: 564rpx;
  height: 93rpx;
  transform: translate(-50%,0);
  opacity: 0;
}
.friend image {
  width: 564rpx;
  height: 93rpx;

}

.friend .progress {
  width: 564rpx;
  height: 40rpx;
  border: 2rpx solid #da251c;
  border-radius: 18rpx;
  margin: 34rpx auto;
  box-sizing: border-box;
  overflow: hidden;
}

.pro {
  height: 100%;
}

.pro_inner {
  width: 100%;
  height: 100%;
  background: #da251c;
  animation: mymove 1.5s;
}

.remain {
  font-weight: bold;
}

.remain text {
  color: #da251c;
  display: inline-block;
  margin-right: 8rpx;
}

.friend_num {
  width: 564rpx;
  margin:0 auto;
  margin-top: 20rpx;
  min-height: 148rpx;
  display: flex;
}

.friend_num .item {
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-sizing: border-box;
}
.friend_num .item text{
  font-size: 24rpx;
}
.friend_num .item .img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0;
  border: 4rpx solid #da251c;
  overflow: hidden;
}

.friend_num .item .img image {
  width: 100%;
  height: 100%;
  margin: 0;
}

.keepon {
  margin-top: 30rpx;
  color: #da251c;
}
.keepon text{
  font-weight: bold;
}
.footer{
  padding: 0 46rpx;
  position: relative;
}
.footer image{
  width: 100%;
}
.go_buy{
  position: absolute;
height: 118rpx;
top: 16%;
width: 163rpx;
right: 67rpx;
}
.go_wan{
   position: absolute;
height: 109rpx;
top: 30%;
left: 46rpx;
right: 46rpx;
}
.redpackpic{
  height: 100vh;
  overflow: hidden;
}
.redpackpic image{
  width: 100%;
  height: 100%;
}
@keyframes mymove {
  from {
    width: 0;
  }

  to {
    width: 100%;
  }
}
