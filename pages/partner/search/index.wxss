@import '/assets/wxss/search.wxss';
@import '/assets/wxss/tutorial.wxss';

page {
    width: 100%;
    background:#f3f3f3;
}
.main{
  width: 100%;
  align-items: center;
  justify-content: center;  
  text-align: center;
  background: #F2F2F2;
  width: 100%;
}
.search_nav {
    height: 98rpx;
    background: #fff;
    width:100%;
}
.search_input input {
  text-align:left;
}

.headImg_call image.user_head {
    width: 100rpx;
    height: 100rpx;
    margin-right: 25rpx;
    border-radius: 10px;
    background: #fff;
}
.search_nav image{
  width: 30rpx;
  height: 31rpx;
}

.search_nav .head {
    display: flex;
    justify-content: flex-start;
}

.sort-wrap{
  background-color:#fff;
  z-index: 2;
  position:fixed;
  margin-top: 98rpx;
  width: 100%;
}
.switchTab{
  width: 100%;
  height: auto;
}
.sort-btn{
  width:33.333%;
  float:left;
  text-align: center;
  height:90rpx;
  line-height:90rpx;
  font-size: 28rpx;
  color:#333;
}
.sort-btn image{
  width: 20rpx;
  height: 20rpx;
  margin-left:6rpx;
}
.sort-label{
  color: #848484;
}
.sort-label.active
{
  color:#000;
}

.tabLayer{
  width: 100%;
  top:180rpx;
  height:100%;
  position:fixed;
  z-index:2;
}
.tabLayer .sort-title.active{
  font-size: 28rpx;
  padding: 19rpx;
  text-align: left;
  color:#000;
}
.tabLayer .sort-title{
  font-size: 28rpx;
  padding: 19rpx;
  text-align: left;
  color: #848484;
  background:#fff;
}
.tabLayer .sort-name{
  margin-left: 50rpx;
}
.tabLayer image{
  width: 28rpx;
  height: 21rpx;
  float: right;
}
.tabLayer .mask
{
  display:block;
  background:#000;
  opacity:0.6;
  width:100%;
  height:100%;
}
.search_product{
    width: 100%;
}
.volume {
    font-size: 24rpx;
    color: #FF5500;
    line-height: 1;
    bottom: 22rpx;
}
.volume small{
    color: #999;
}
.title_volume{
    position: relative;
}
.countTop{
    padding-top: 190rpx;
  }
.commodity_list .commodity_item .volume .bold{
  font-size: 24rpx;
  font-weight:bold;
  color: #FF5500;
  float: left;
}
.commodity_list .commodity_item .volume .small{
    color: #999;
    position: absolute;
    right: 0;
    bottom: 0;
  }
.commodity_showList{
    display: flex;
    flex-wrap: wrap;
    padding: 0 19rpx;
}
.commodity_list {
    /* height: calc(100vh - 328rpx); */ 
    margin-top: 0rpx
}

.commodity_list .commodity_item .title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-wrap: break-word;
    word-break: break-all;
    height: 75rpx;
    line-height: 40rpx;
}

.commodity_item .new{
  position: absolute;
  background: #FF0000;
  color: #fff;
  font-size: 25rpx;
  padding: 0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.title_swiper {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: center;
}

.title_swiper .title {
    font-size: 40rpx;
}

.headImg_call {
    position: relative;
}

.headImg_call .contactIcon {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    right: 25rpx;
    bottom: 9rpx;
}

.no-data {
    color: #999;
    font-size: 24rpx;
    text-align: center;
    padding: 32rpx 0;

}
.commodity_list .commodity_item .coupon
{
  position: absolute;
  left: 23rpx;
  bottom: 168rpx;
}
text.coupon3
{
  color: #e70002;
  background: #fff;  
  display: block;
  font-size: 20rpx; 
  width: 110rpx;
  height: 35rpx;
  line-height: 35rpx;
  border-radius: 30rpx;
  text-align: center;
  border: 1rpx solid #999;
}

.commodity_list .commodity_item image{
  width: 100%;
  height: 310rpx;
}

