page{
  background: #f9f9f9;
  min-height: 100vh;
}
.view{
    width:100%;
    margin:0 auto;
}
.view-contribution{
  width:90%;
  margin:0 auto;
}
.content .title{
    padding: 15rpx 0rpx 15rpx 0rpx;
    display:flex;
}
legend{
    height:50rpx;
    font-size:36rpx;
    line-height:50rpx;
    color:#333333;
}
.content .title image{
    width: 32rpx;
    height: 32rpx;
    padding: 10rpx;
}
.text-content{
    height:100rpx;
    border-bottom:1rpx solid #e6e6e6;
    padding: 20rpx 0rpx 20rpx 0rpx;
}
.text-content .left{
    width:60%;
    text-align:left;
    float:left;
}
.text-content p{
    display:block;
    width:100%;
    height:42rpx;
    line-height:42rpx;
    font-size:30rpx;
    padding: 5rpx;
}
.text-content p.small{
    font-size:24rpx;
    color:#777;
}
.text-content .right{
    line-height:80rpx;
    text-align:right;
    font-size:30rpx;
    color:#E60000;
}
scroll-view{
  height: 100vh;
  box-sizing: border-box;
}
.no-more {
  text-align: center;
  color: #aaa;
  font-size: 24rpx;
  box-sizing: border-box;
  visibility:visible;
  margin-top: 20rpx;
}