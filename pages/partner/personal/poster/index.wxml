<view class='post-list'>
    <block>
        <view class="item" wx:for="{{poster_list}}" wx:key="index"  bindtap="goDetail" data-id="{{index}}">
            <view>
                <image src="{{item.img_url}}" class="icon"></image>
            </view>
            <view class="middle">
                <view class="title">{{item.name}}</view>
                <view>{{item.add_time}}</view>
            </view>
        </view>
    </block>
    
</view>