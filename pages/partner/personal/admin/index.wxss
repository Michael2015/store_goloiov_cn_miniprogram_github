/* pages/partner/personal/admin/index.wxss */
page{
    background: #F5F5F5;
}
.warp{
    width: 100%;
    height: 100%;
}
.warp input {
    height: 84rpx;
    background-color: #ffffff;
    border: 1rpx solid #f5f5f5;
    font-size: 28rpx;
    padding-left: 30rpx;
}
.warp .Apply_item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1rpx solid #f5f5f5;
    height: 84rpx;
    background: #fff;
    padding: 0 30rpx;
}
.warp .Apply_item .name{
    font-size: 28rpx;
    color: #333333;
}
.warp .Apply_item .show{
    flex: 1;
    font-size: 28rpx;
    color: #333333;
    padding-left:20rpx; 
}
.warp .Apply_item .right-icon{
    width: 10rpx;
    height: 100%;
    display: flex;
    align-items: center;
}
.right-icon image{
    width: 100%;
}
textarea{
    width: 100%;
    background: #fff;
    border: 1rpx solid #f5f5f5;
    padding-left: 30rpx;
    padding-top: 22rpx;
    font-size: 28rpx;
}
input::-webkit-input-placeholder,textarea::-webkit-input-placeholder{
    color: #c4c4c6;
}
.Apply_record{
    position: fixed;
    left: 50%;
    bottom: 122rpx;
    transform: translateX(-50%);
	font-size: 26rpx;
	letter-spacing: 1rpx;
    color: #0091ff;
}
.Apply_btn{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #e31336;
    color: #ffffff;
    letter-spacing: 1rpx;
    font-size: 30rpx;
}