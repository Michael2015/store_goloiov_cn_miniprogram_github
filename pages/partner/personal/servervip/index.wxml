<!-- pages/partner/personal/admin/index.wxml -->
<view class="warp">
    <input type="text" placeholder="姓名" bindinput="inputName" />
    <input type="Number" placeholder="手机" bindinput="inputPhone" />
    <input type="text" placeholder="门店名称" bindinput="inputShopName" />

    <picker mode="region" value="{{areaList}}" bindchange="goAddAddress">
        <view class="Apply_item">
            <view class="name">门店地址</view>
            <view class="show">{{AdressList.length?addressTitle:'请选择地址'}}</view>
            <view class="right-icon">
                <image src="/assets/image/right.png" mode="widthFix"></image>
            </view>
        </view> 
    </picker>
    <view class="address-detail">
        <textarea  cols="30" rows="3" placeholder="详细地址" bindinput="inputAddress"></textarea>
    </view>
    <view class="shop-image">
        <label>门店照片（1-5张）</label>
        <view class="upUpoto">
            <view class="photo_shop_view">
                <image wx:for="{{imgShopList}}" bindlongtap="deleteShopImage" bindtap='viewbigimg' data-index="{{index}}" wx:key="{{index}}" data-license="{{item}}" src="{{item}}" mode="aspectFit" class="user_select_photo"></image>
            </view>
            <view class="selectPhoto" bindtap="selectShopPhoto">
                <image mode="widthFix" src='/assets/image/add.png' class="add_img"></image>
            </view>
        </view>
    </view>
    
    <view class="shop-image">
        <label>营业执照</label>
        <view class="upUpoto">
            <view class="photo_license_view">
                <image wx:for="{{imgLicenseList}}" bindlongtap="deleteLicenseImage" bindtap='viewbigimg' wx:key="{{index}}" data-index="{{index}}" data-license="{{item}}" src="{{item}}" mode="aspectFit" class="user_select_photo"></image>
            </view>
             <view class="selectPhoto" bindtap="selectLicensePhoto">
                <image mode="widthFix" src='/assets/image/add.png' class="add_img"></image>
            </view>
        </view>
    </view>
    <textarea cols="30" rows="10" placeholder="申请原因" bindinput="inputReason"></textarea>
    <view class="nav_bottom">
        <view class="Apply_record" bindtap="goapplyList">申请记录</view>
        <view class="Apply_btn" bindtap="goApply">立即申请</view>
    </view>
</view>