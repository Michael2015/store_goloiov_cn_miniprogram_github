.index {
  margin: 26rpx 26rpx 0;
  min-height: 340rpx;
  background-color: rgba(242, 242, 242, 1);
  padding: 20rpx 20rpx 0 20rpx;
  position: relative;
}

.address {
  font-size: 40rpx;
  font-weight: 650;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.main {
  margin: 34rpx 0;
  line-height: 50rpx;
}

.main::before {
  content: "Â·";
  color: blue;
  margin-right: 30rpx;
}

.main text {
  color: rgb(255, 102, 51);
  margin: 0 70rpx 0 10rpx;
  display: inline-block;
  vertical-align: middle;
  margin-top: -5rpx;
  font-weight: bold;
}

.line::after {
  content: "";
  display: block;
  height: 4rpx;
  border-bottom:2rpx solid black;
  margin-top: 10rpx;
  width: 95%;
}

.result {
  width: 95%;
  display: flex;
  justify-content: space-between;
}

.result text {
  width: 50%;
  white-space: nowrap;
  overflow: hidden;
  font-size: 32rpx;
}

.hasDone {
  position: absolute;
  top: 50%;
  right: 7%;
  transform: translate(0, -50%);
  font-size: 40rpx;
  color: rgb(255, 102, 51);
  font-weight: bold;
}

.icon {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.icon image {
  width: 100rpx;
  height: 100rpx;
}

.icon view {
  line-height: 50rpx;
}
