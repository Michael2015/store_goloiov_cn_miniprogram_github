<wxs module="format">
  var carNumFirstFormat = function(str) {
    return str.substring(0, 2);
  };
  var carNumLastFormat = function(str) {
    return str.substring(2);
  };
  module.exports = {
    carNumFirstFormat: carNumFirstFormat,
    carNumLastFormat: carNumLastFormat
  }
</wxs>